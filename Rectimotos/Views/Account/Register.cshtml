@model Rectimotos.Models.UsuariosViewModel

<!DOCTYPE html>
<html lang="es">
    <head>
        <title>REGISTRO DE CLIENTE | MONTACARGAS AM&M</title>
        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
        <link rel="stylesheet" href="~/css/Register.css" />
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    </head>

    <body>

        
        <header>
            <div class="container">
                <div class="card justify-content-center text-center hold-transition login-page m-auto">

                    <form asp-action="Register">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <h4> REGISTRO DE CLIENTES </h4>

                        <div class="card-body">
                            <div class="form-group col-12">
                                <label asp-for="Cedula" class="control-label">Numero de Documento:</label>
                                <input asp-for="Cedula" class="form-control" required />
                                <span asp-validation-for="Cedula" class="text-danger"></span>
                            </div>

                            <div class="form-group col-12">
                                <label asp-for="NombreCompleto" class="control-label">Nombre Completo:</label>
                                <input asp-for="NombreCompleto" class="form-control" required />
                                <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                            </div>

                            <div class="form-group col-12">
                                <label asp-for="Direccion" class="control-label">Direccion:</label>
                                <input asp-for="Direccion" class="form-control" required />
                                <span asp-validation-for="Direccion" class="text-danger"></span>
                            </div>

                            <div class="form-group col-12">
                                <label asp-for="Email" class="control-label">Correo Electronico:</label>
                                <input asp-for="Email" class="form-control" required />
                                <span asp-validation-for="Email" class="text-danger"></span>

                                @if (!string.IsNullOrEmpty(TempData["ErrorEmail"] as string))
                                {
                                    <div class="text-danger">
                                        <p>
                                            @TempData["ErrorEmail"]
                                        </p>
                                    </div>
                                }
                            </div>

                            <div class="form-group col-12">
                                <label asp-for="Usuario" class="control-label">Usuario:</label>
                                <input asp-for="Usuario" class="form-control" required />
                                <span asp-validation-for="Usuario" class="text-danger"></span>

                                @if (!string.IsNullOrEmpty(TempData["ErrorUser"] as string))
                                {
                                    <div class="text-danger">
                                        <p>
                                            @TempData["ErrorUser"]
                                        </p>
                                    </div>
                                }
                            </div>
                       
                            <div class="form-group  col-12">
                                <label asp-for="Contraseña" class="control-label">Contraseña:</label>
                                <input asp-for="Contraseña" type="password" class="form-control" required />
                                <span asp-validation-for="Contraseña" class="text-danger"></span>

                                @if (!string.IsNullOrEmpty(TempData["ErrorPassword"] as string))
                                {
                                    <div class="text-danger">
                                        <p>
                                            @TempData["ErrorPassword"]
                                        </p>
                                    </div>
                                }
                            </div>

                            <div class="form-group" hidden>
                                <label asp-for="IdRol" class="control-label">Tipo de usuario:</label>
                                <input asp-for="IdRol" class="form-control" readonly>
                                <span asp-validation-for="IdRol" class="text-danger"></span>
                            </div>

                            <button type="submit" value="Registrar" class="btn btn-primary btn-crear">Registrarse</button>

                            @if (!string.IsNullOrEmpty(TempData["Message"] as string))
                            {
                                <div class="text-danger">
                                    <p>
                                        @TempData["Message"]
                                    </p>
                                </div>
                            }

                            <div class="text-center">
                                <a asp-controller="Account" asp-action="Login" class="text-center">Ya tengo una cuenta</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </header>
    </body>
</html>