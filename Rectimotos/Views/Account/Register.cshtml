@model IEnumerable<Rectimotos.Models.UsuariosViewModel>
@using Rectimotos.Clases;

@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <title>@ViewData["Title"] - Rectimotos</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/Rectimotos.styles.css" asp-append-version="true" />
    </head>

 <body>
     <header>
         <div class="container col-12">
            <div class="card text-center hold-transition login-page m-auto col-6 ">

                @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                {
                    <div class="card-body text-center">
                        <div class="container col-12 col-lg-9">
                            <div class="col-12 m-auto">
                                <h3>REGISTRO DE CLIENTES</h3>

                                <div class="input-group mb-3">
                                    <span for="Cedula" class="input-group-text" id="basic-addon1"><i class="bi bi-person-vcard"></i></span>
                                    <input type="text" id="Cedula" name="model.Cedula" class="form-control" placeholder="CEDULA" aria-describedby="basic-addon1" required><br>
                                </div><br>

                                <div class="input-group mb-3">
                                    <span for="NombreCompleto" class="input-group-text" id="basic-addon1"><i class="bi bi-person-circle"></i></span>
                                    <input type="text" id="NombreCompleto" name="model.NombreCompleto" class="form-control" placeholder="NOMBRE COMPLETO" aria-describedby="basic-addon1" required><br>
                                </div><br>

                                 <div class="input-group mb-3">
                                    <span for="Telefono" class="input-group-text" id="basic-addon1"><i class="bi bi-person-circle"></i></span>
                                    <input type="text" id="Telefono" name="model.Telefono" class="form-control" placeholder="TELEFONO" aria-describedby="basic-addon1"><br>
                                </div><br>

                                 <div class="input-group mb-3">
                                    <span for="IdCiudad" class="input-group-text" id="basic-addon1"><i class="bi bi-person-circle"></i></span>
                                    <input type="text" id="IdCiudad" name="model.IdCiudad" class="form-control" placeholder="CIUDAD" aria-describedby="basic-addon1" ><br>
                                </div><br>

                                <div class="input-group mb-3">
                                    <span for="Direccion" class="input-group-text" id="basic-addon1"><i class="bi bi-person-circle"></i></span>
                                    <input type="text" id="Direccion" name="model.Direccion" class="form-control" placeholder="DIRECCIÓN" aria-describedby="basic-addon1" ><br>
                                </div><br>

                                <div class="input-group mb-3">
                                    <span for="Imagen" class="input-group-text" id="basic-addon1"><i class="bi bi-person-circle"></i></span>
                                    <input type="text" id="Imagen" name="model.Imagen" class="form-control" placeholder="AGREGAR FOTO" aria-describedby="basic-addon1" ><br>
                                </div><br>

                                <div class="input-group mb-3">
                                    <span for="Email" class="input-group-text" id="basic-addon1"><i class="bi bi-at"></i></span>
                                    <input type="text" id="Email" name="Email" class="form-control" placeholder="CORREO ELECTRONICO" aria-describedby="basic-addon1" required><br>
                                </div><br>

                                @if (!string.IsNullOrEmpty(TempData["ErrorEmail"] as string))
                                {
                                    <div class="text-danger">
                                        <p>
                                            @TempData["ErrorEmail"]
                                        </p>
                                    </div>
                                }

                                 <div class="input-group mb-3">
                                    <span for="Usuario" class="input-group-text" id="basic-addon1"><i class="bi bi-person-circle"></i></span>
                                    <input type="text" id="Email" Usuario="Usuario" class="form-control" placeholder="USUARIO" aria-describedby="basic-addon1" required><br>
                                </div><br>

                                @if (!string.IsNullOrEmpty(TempData["ErrorUser"] as string))
                                {
                                    <div class="text-danger">
                                        <p>
                                            @TempData["ErrorUser"]
                                        </p>
                                    </div>
                                }

                                <div class="input-group mb-3">
                                    <span for="Contraseña" class="input-group-text" id="basic-addon1"><i class="bi bi-lock"></i></span>
                                    <input type="password" id="Contraseña" name="Contraseña" class="form-control" placeholder="CONTRASEÑA" aria-describedby="basic-addon1" required>
                                    <span id="togglePassword" onclick="togglePasswordVisibility()"><i class="bi bi-eye"></i></span>
                                </div><br>

                                @if (!string.IsNullOrEmpty(TempData["ErrorPassword"] as string))
                                {
                                    <div class="text-danger">
                                        <p>
                                            @TempData["ErrorPassword"]
                                        </p>
                                    </div>
                                }

                                <button type="submit" value="Registrar" class="btn btn-danger">REGISTRARSE</button>

                                @if (!string.IsNullOrEmpty(TempData["Message"] as string))
                                {
                                    <div class="text-danger">
                                        <p>
                                            @TempData["Message"]
                                        </p>
                                    </div>
                                }

                                <div class="text-center">
                                    <a asp-controller="Account" asp-action="Login" class="text-center">Ya tengo una cuenta</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
         </div>
    </header>

     <footer>
            <h5>&copy; Copyright 2023 - Rectimotos José Adan - TIC v1.0</h5>
     </footer>

 </body>

</html>