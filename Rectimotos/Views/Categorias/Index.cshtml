@model IEnumerable<Rectimotos.Models.CategoriasViewModel>

@{
    ViewData["Title"] = "Index";
}

<head>
    <title>@ViewData["Title"] - RECTIMOTOS</title>

    <!-- Add your stylesheet reference here -->
    <link rel="stylesheet" href="~/css/Indexs.css" />

    <!-- You can include additional stylesheets or scripts here if needed -->
</head>

<body>
    <div class="container-fluid">

        <h4>TABLA DE CATEGORÍAS</h4>

        <div class="row col-12">
            <a asp-action="Create" class="btn botons btn-secondary col-1"><i class="fa-solid fa-user-plus"></i> Categoría</a>
        </div>

        <table class="table table-striped table-bordered text-center" id="tblCategorias">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdCategoria"><i class="fa-solid fa-pencil"></i> Edit</a> |
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.IdCategoria"><i class="fa-solid fa-info"></i> Details</a> |
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdCategoria"><i class="fa-solid fa-trash-can"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>