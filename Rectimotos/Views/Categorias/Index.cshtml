@model IEnumerable<Rectimotos.Models.CategoriasViewModel>

@{
    ViewData["Title"] = "Index";
}

<head>
    <title>@ViewData["Title"] - RECTIMOTOS</title>

    <!-- Add your stylesheet reference here -->
    <link rel="stylesheet" href="~/css/app.css" />

    <!-- You can include additional stylesheets or scripts here if needed -->
</head>

<body>

        <div class="pagetitle">
            <h1>Categorias</h1>
        </div><!-- End Page Title -->

        <section class="section">
            <div class="row">
                <div class="col-lg-12">

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Categorias</h5>

                            <!-- Table with stripped rows -->
                            <!-- Table with stripped rows -->
                            <div>
                                <a class="btn btn-primary mb-3" asp-action="Create"><i class="fa-solid fa-plus"></i>
                                    Añadir</a>
                            </div>
                            <table class="table table-striped table-hover datatable">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Nombre)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nombre)
                                            </td>
                                            <td>
                                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdCategoria"><i class="fa-solid fa-edit"></i></a>
                                                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.IdCategoria"><i class="fa-solid fa-eye"></i></a>
                                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdCategoria"><i class="fa-solid fa-trash"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <!-- End Table with stripped rows -->

                        </div>
                    </div>

                </div>
            </div>
        </section>


</body>