@model Rectimotos.Clases.Ciudad

@{
    ViewData["Title"] = "Delete";
}

<head>
    <title>@ViewData["Title"] - RECTIMOTOS</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesone/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/font-awesone/js/all.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
</head>

<body>
    <h1>ELIMINAR</h1>

    <h3>SEGURO QUE DESEAS ELIMINAR ESTA CIUDAD?</h3>
    <div>
        <h4>Ciudad</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.IdEstado)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.IdEstado)
            </dd>
        </dl>
    
        <form asp-action="Delete">
            <input type="hidden" asp-for="IdCiudad" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" asp-route-idEstado="@ViewBag.Estado">Volver sin Eliminar</a>
        </form>
    </div>
</body>