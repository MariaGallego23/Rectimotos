@model IEnumerable<Rectimotos.Clases.Entidades.Estados>

@{
    ViewData["Title"] = "Index Estados";
}

<head>
    <title>@ViewData["Title"] - RECTIMOTOS</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesone/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/Indexs.css" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/font-awesone/js/all.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
</head>


<body>
    <div class="container-fluid text-center">

        <h4>TABLA DE ESTADOS</h4>

        <div class="row botons col-12">
            <a asp-action="Create" asp-route-idPais="@ViewBag.Pais" class="btn btn-secondary col-1"><i class="fa-solid fa-user-plus"></i>Crear Estado</a>
        </div>

        <table class="table table-striped table-bordered text-center" id="tblEstado">
            <thead class="thead-dark">
                <tr>
                    <th>ESTADOS</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var estado in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="Ciudad" asp-action="Index" asp-route-idEstado="@estado.IdEstado">@estado.Nombre</a>
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@estado.IdEstado"><i class="fa-solid fa-pencil"></i></a> |
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@estado.IdEstado"><i class="fa-solid fa-trash-can"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>