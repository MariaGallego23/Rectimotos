@model IEnumerable<Rectimotos.Clases.Entidades.Paises>

@{
    ViewData["Title"] = "Index Paises";
}

<head>
    <title>@ViewData["Title"] - RECTIMOTOS</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesone/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/Indexs.css" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/font-awesone/js/all.min.js"></script>
</head>

<body>
    <div class="container-fluid">

        <h4>TABLA DE PAISES</h4>
        <hr />
        <div class="row col-12">
            <a asp-action="Create" class="btn botons btn-secondary col-1"><i class="fa-solid fa-user-plus"></i> Pais</a>
        </div>

        <table class="table table-striped table-bordered text-center" id="tblPais">
            <thead class="thead-dark">
                <tr>
                    <th>PAIS</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var pais in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="Estados" asp-action="Index" asp-route-idPais="@pais.IdPais">@pais.Nombre</a>
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@pais.IdPais"><i class="fa-solid fa-pencil"></i></a> |
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@pais.IdPais"><i class="fa-solid fa-trash-can"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>