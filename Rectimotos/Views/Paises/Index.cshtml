</head>


<body>
    <div class="container-fluid text-center">

        <h4>TABLA DE PAISES</h4>

        <div class="row botons col-12">
            <a asp-action="Create" class="btn btn-secondary col-1"><i class="fa-solid fa-user-plus"></i> Pais</a>
        </div>

        <table class="table table-striped table-bordered text-center" id="tblPais">
            <thead class="thead-dark">
                <tr>
                    <th>PAIS</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var pais in Model) {
                    <tr>
                        <td>
                            <a asp-controller="Estados" asp-action="Index" asp-route-id="@pais.IdPais">@pais.Nombre</a>
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@pais.IdPais"><i class="fa-solid fa-pencil"></i></a> |
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@pais.IdPais"><i class="fa-solid fa-trash-can"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
