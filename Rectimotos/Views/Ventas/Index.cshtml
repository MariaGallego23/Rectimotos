@model IEnumerable<Rectimotos.Models.VentasViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>TUS PEDIDOS</h1>

<p>
    <a asp-action="Create">Agregar pedido</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observaciones)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observaciones)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdVenta">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdVenta">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdVenta">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
